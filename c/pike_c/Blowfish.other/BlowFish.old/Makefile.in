GCC=/usr/bin/egcs
CFLAGS=-Wall -g -O3
LIBS= 
DFLAGS=-DLINUX

PROGS = BLOWFISH.so
OBJS = bf_cbc.o bf_cfb64.o bf_ecb.o bf_enc.o bf_ofb64.o bf_skey.o bfspeed.o bftest.o blowfish.o

all: $(PROGS)

solaris:
  DFLAGS="-DSOLARIS"

openbsd: bsd

freebsd: bsd

bsd: all
  DFLAGS="-DBSD"

linux:
  DFLAGS="-DLINUX"

BLOWFISH.so: $(OBJS)
	$(GCC) -c $@ $^ $(LIBS)

bf_cbc.o: bf_cbc.c
	$(GCC) -c $(CFLAGS) -DDEBUG -o $@ $<

bf_cfb64.o: bf_cfb64.c
	$(GCC) -c $(CFLAGS) -DDEBUG -o $@ $<

bf_ecb.o: bf_ecb.c
	$(GCC) -c $(CFLAGS) -DDEBUG -o $@ $<

bf_enc.o: bf_enc.c bf_locl.h
	$(GCC) -c $(CFLAGS) -DDEBUG -o $@ $<

bf_ofb64.o: bf_ofb64.c bf_pi.h
	$(GCC) -c $(CFLAGS) -DDEBUG -o $@ $<

bf_skey.o: bf_skey.c
	$(GCC) -c $(CFLAGS) -DDEBUG -o $@ $<

bfspeed.o: bfspeed.c
	$(GCC) -c $(CFLAGS) -DDEBUG -o $@ $<

bftest.o: bftest.c
	$(GCC) -c $(CFLAGS) -DDEBUG -o $@ $<

blowfish.o: blowfish.c blowfish.h
	$(GCC) -c $(CFLAGS) -DDEBUG -o $@ $<

clean:
	rm -f *.o core

veryclean: clean
	rm -f $(PROGS)

very: veryclean




